# =============================================================================
# Council DA Scraper - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/council_da
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/council_da

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_SECRET_KEY=your-secret-key-change-in-production
API_RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# AI Services (Anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Scraping Configuration
# -----------------------------------------------------------------------------
SCRAPER_RATE_LIMIT_SECONDS=1.0
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_MAX_RETRIES=3
SCRAPER_HEADLESS=true

# -----------------------------------------------------------------------------
# Proxy Configuration (Optional)
# -----------------------------------------------------------------------------
PROXY_ENABLED=false
PROXY_DATACENTER_URL=
PROXY_RESIDENTIAL_URL=
PROXY_BRIGHTDATA_URL=

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CACHE_PATH=./data/cache

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
SENTRY_DSN=
